{
  "name": "@waits/lively-react-tiptap",
  "version": "0.0.1",
  "type": "module",
  "description": "Tiptap integration for Lively collaborative editing",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup src/index.ts --format esm,cjs --dts"
  },
  "dependencies": {
    "@waits/lively-yjs": "workspace:*",
    "@waits/lively-react": "workspace:*",
    "@tiptap/suggestion": "^3.20.0",
    "y-prosemirror": "^1.3.7"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "@tiptap/react": "^3",
    "@tiptap/pm": "^3",
    "@tiptap/extension-task-list": "^3",
    "@tiptap/extension-task-item": "^3",
    "@tiptap/extension-table": "^3",
    "@tiptap/extension-table-row": "^3",
    "@tiptap/extension-table-cell": "^3",
    "@tiptap/extension-table-header": "^3",
    "@tiptap/extension-image": "^3",
    "@tiptap/extension-underline": "^3",
    "@tiptap/extension-highlight": "^3",
    "@tiptap/extension-link": "^3",
    "@tiptap/extension-code-block-lowlight": "^3",
    "lowlight": "^3",
    "yjs": "^13"
  },
  "peerDependenciesMeta": {
    "@tiptap/extension-task-list": { "optional": true },
    "@tiptap/extension-task-item": { "optional": true },
    "@tiptap/extension-table": { "optional": true },
    "@tiptap/extension-table-row": { "optional": true },
    "@tiptap/extension-table-cell": { "optional": true },
    "@tiptap/extension-table-header": { "optional": true },
    "@tiptap/extension-image": { "optional": true },
    "@tiptap/extension-underline": { "optional": true },
    "@tiptap/extension-highlight": { "optional": true },
    "@tiptap/extension-link": { "optional": true },
    "@tiptap/extension-code-block-lowlight": { "optional": true },
    "lowlight": { "optional": true }
  },
  "devDependencies": {
    "@tiptap/react": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/suggestion": "^3.20.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5",
    "yjs": "^13.6.29"
  }
}
