{
  "name": "@waits/lively-react",
  "version": "0.0.1",
  "type": "module",
  "description": "React hooks for Lively real-time collaboration",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./suspense": {
      "import": {
        "types": "./dist/suspense.d.ts",
        "default": "./dist/suspense.js"
      },
      "require": {
        "types": "./dist/suspense.d.cts",
        "default": "./dist/suspense.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup src/index.ts src/suspense.ts --format esm,cjs --dts"
  },
  "dependencies": {
    "@waits/lively-client": "workspace:*",
    "@waits/lively-types": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.14",
    "@waits/lively-server": "workspace:*",
    "happy-dom": "^20.6.3",
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5",
    "ws": "^8.19.0"
  }
}
