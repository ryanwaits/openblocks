{
  "name": "@waits/lively-client",
  "version": "0.0.1",
  "type": "module",
  "description": "Client SDK for Lively real-time collaboration",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "bunup src/index.ts --format esm,cjs --dts"
  },
  "dependencies": {
    "@waits/lively-storage": "workspace:*",
    "@waits/lively-types": "workspace:*"
  },
  "peerDependencies": {
    "ws": "^8"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/ws": "^8.5.14",
    "@waits/lively-server": "workspace:*",
    "typescript": "^5",
    "ws": "^8.19.0"
  }
}
