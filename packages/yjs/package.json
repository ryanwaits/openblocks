{
  "name": "@waits/lively-yjs",
  "version": "0.0.1",
  "type": "module",
  "description": "Yjs provider for Lively — Y.Doc ↔ Room bridge",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bunup src/index.ts --format esm,cjs --dts"
  },
  "dependencies": {
    "y-protocols": "^1.0.7"
  },
  "peerDependencies": {
    "yjs": "^13",
    "@waits/lively-client": "workspace:*"
  },
  "devDependencies": {
    "@waits/lively-client": "workspace:*",
    "@waits/lively-server": "workspace:*",
    "typescript": "^5",
    "yjs": "^13.6.29"
  }
}
